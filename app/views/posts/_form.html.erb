<%= form_for(@post) do |f| %>

  <%= author_id_field(@post) %><br><br>

  <label>Post title:</label><br>
  <%= f.text_field :title, placeholder: "Title" %><br><br>

  <label>Post Description</label><br>
  <%= f.text_area :description, placeholder: "Description" %><br><br>

  <%= f.submit %>
<% end %>
